# CLASSES

:External a owl:Restriction ;
    owl:onProperty g:service ;
    owl:hasValue _:lithuanian-politics .

:PersonResource a owl:Class ;
    rdfs:subClassOf sioc:Item, lda:ItemEndpoint , :External ,
	[ a owl:Restriction ;
		owl:onProperty lda:uriTemplate ;
		owl:hasValue "/persons/{givenName}+{familyName}"
	] ,
	[
                a owl:Restriction;
                owl:onProperty sioc:has_container;
                owl:hasValue <persons>
        ] ,
	[ a owl:Restriction ;
		owl:onProperty foaf:primaryTopic ;
		owl:allValuesFrom foaf:Person
	] ;
    spin:constraint [ a :DescribeTemplate ] .

:OrganizationResource a owl:Class ;
    rdfs:subClassOf sioc:Item, lda:ItemEndpoint , :External ,
	[ a owl:Restriction ;
		owl:onProperty lda:uriTemplate ;
